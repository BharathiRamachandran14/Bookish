@model List<Book>
@{
    ViewData["Title"] = "Books";
}

<div class="text-center">
    <h1 class="display-4">Books</h1>
    <ul>
        @foreach (var Book in Model)
        {
            <li>@Book.Title</li>
            <li>@Book.Author</li>
            <li>@Book.Blurb</li>
            <img src="@Book.CoverImageUrl" alt="@Book.Title" width="200px"/>
        }
        
    </ul>
</div>
